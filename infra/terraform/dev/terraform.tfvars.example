# Development Environment Variables
# Copy this file to terraform.tfvars and customize as needed
# DO NOT commit terraform.tfvars to version control

aws_region = "us-east-1"
project_name = "vs-platform"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]

# Networking (minimal for dev)
create_internet_gateway = true
create_nat_gateway = false  # Disabled to reduce costs

# S3 Configuration
enable_s3_versioning = false  # Disabled to reduce costs
s3_encryption_algorithm = "AES256"

# CDN Configuration
enable_cdn = false  # Disabled for dev
enable_ipv6 = true
cdn_min_ttl = 0
cdn_default_ttl = 3600
cdn_max_ttl = 86400

# Worker Configuration
worker_service_principal = "ecs-tasks.amazonaws.com"

# Container Orchestration
orchestration_type = "ecs"
enable_container_insights = false

# Common Tags
common_tags = {
  Project     = "VS Platform"
  Environment = "dev"
  ManagedBy   = "Terraform"
  Team        = "Platform"
}

